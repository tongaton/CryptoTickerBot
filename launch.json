{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch ASP.NET Core Web API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/CryptoTickerBotAPI/bin/Debug/net5.0/CryptoTickerBotDB.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CryptoTickerBotAPI",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "dotnetRunMessages": true
        }
    ]
}